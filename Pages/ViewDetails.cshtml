@page
@model AgriWiki_Project.Pages.ViewDetails
@{
    ViewData["Title"] = "ViewDetails";
}

<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tomato Plant - AgriWiki</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-green: #2C4A28;
            --light-green: #4a7c59;
            --accent-gray: #6c757d;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: white;
            color: #333;
            scroll-behavior: smooth;
        }

        .navbar-brand {
            color: var(--primary-green) !important;
            font-weight: bold;
            font-size: 1.5rem;
        }

        /* Full width header section without sidebar */
        .plant-header {
            background: linear-gradient(135deg, #f8f9fa 0%, white 100%);
            padding: 3rem 0;
            margin-bottom: 0;
        }

        .main-image {
            width: 100%;
            height: 350px;
            object-fit: cover;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(44, 74, 40, 0.15);
        }

        .thumbnail {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 3px solid transparent;
        }

        .thumbnail:hover,
        .thumbnail.active {
            border-color: var(--primary-green);
            transform: scale(1.05);
        }

        .plant-name {
            color: var(--primary-green);
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .scientific-name {
            font-style: italic;
            color: var(--accent-gray);
            font-size: 1.3rem;
            margin-bottom: 1.5rem;
        }

        .category-badge {
            background-color: var(--primary-green);
            color: white;
            padding: 0.7rem 1.5rem;
            border-radius: 25px;
            font-size: 1rem;
            display: inline-block;
            margin-bottom: 1.5rem;
        }

        /* Updated content wrapper for smaller sidebar */
        .content-wrapper {
            background-color: #f8f9fa;
            padding: 2rem 0;
        }

        .sidebar {
            background-color: white;
            border-radius: 15px;
            padding: 1.5rem 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border: 1px solid #e9ecef;
            position: sticky;
            top: 2rem;
            height: fit-content;
            max-height: calc(100vh - 4rem);
            overflow-y: auto;
        }

        .sidebar .nav-link {
            color: #333;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            margin: 0.2rem 1rem;
            font-weight: 500;
            font-size: 0.95rem;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: var(--primary-green);
            color: white;
            transform: translateX(4px);
        }

        .sidebar .nav-link i {
            width: 20px;
        }

        .content-area {
            padding-left: 2rem;
        }

        /* Updated sections */
        .section {
            margin-bottom: 3rem;
            padding: 2.5rem;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border: 1px solid #e9ecef;
        }

        .section h3 {
            color: var(--primary-green);
            margin-bottom: 2rem;
            font-weight: bold;
            font-size: 1.8rem;
        }

        .condition-item,
        .disease-item,
        .pest-item {
            background-color: #f8f9fa;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border-radius: 10px;
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .condition-item:hover,
        .disease-item:hover,
        .pest-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(44, 74, 40, 0.1);
        }

        .condition-item h5,
        .disease-item h5,
        .pest-item h5 {
            color: var(--primary-green);
            margin-bottom: 0.8rem;
            font-weight: 600;
        }

        .uses-group {
            background-color: #f8f9fa;
            padding: 2rem;
            margin-bottom: 1.5rem;
            border-radius: 10px;
            border: 1px solid #e9ecef;
        }

        .uses-group h5 {
            color: var(--primary-green);
            margin-bottom: 1.5rem;
            font-weight: bold;
        }

        .use-tag {
            background-color: var(--primary-green);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            margin: 0.3rem;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .use-tag:hover {
            background-color: var(--light-green);
            transform: scale(1.05);
        }

        .external-link {
            display: block;
            padding: 1.5rem;
            background-color: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 1rem;
            text-decoration: none;
            color: var(--primary-green);
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .external-link:hover {
            background-color: var(--primary-green);
            color: white;
            transform: translateX(8px);
            box-shadow: 0 4px 15px rgba(44, 74, 40, 0.2);
        }

        @media (max-width: 991px) {
            .plant-name {
                font-size: 2.2rem;
            }
            
            .sidebar {
                position: static;
                margin-bottom: 2rem;
                height: auto;
                max-height: none;
            }

            .content-area {
                padding-left: 0;
            }

            .section {
                padding: 1.5rem;
            }
        }

        @media (max-width: 768px) {
            .content-wrapper {
                padding: 1rem 0;
            }
        }

        .offcanvas-header {
            background-color: var(--primary-green);
            color: white;
        }

        .offcanvas-body .nav-link {
            color: #333;
            padding: 1rem;
            border-bottom: 1px solid #dee2e6;
            font-weight: 500;
        }

        .offcanvas-body .nav-link:hover,
        .offcanvas-body .nav-link.active {
            background-color: var(--primary-green);
            color: white;
        }

        /* Sidebar title styling */
        .sidebar-title {
            text-align: center;
            padding: 0 1.5rem 1rem 1.5rem;
            margin-bottom: 1rem;
            border-bottom: 1px solid #e9ecef;
        }

        .sidebar-title h6 {
            color: var(--primary-green);
            font-weight: bold;
            margin: 0;
        }
    </style>
</head>
<body>
    <!-- Full width header section -->
    <section class="plant-header">
        <div class="container">
            <div class="text-center mb-4 d-lg-none">
                <h4 class="navbar-brand">
                    <i class="fas fa-leaf me-2"></i>AgriWiki
                </h4>
            </div>
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <img id="mainImage" src="/placeholder.svg?height=350&width=500" 
                         alt="Tomato Plant" class="main-image mb-4">
                    <div class="d-flex gap-3 justify-content-center justify-lg-start flex-wrap">
                        <img src="/placeholder.svg?height=80&width=80" 
                             alt="Tomato 1" class="thumbnail active" onclick="changeMainImage(this)">
                        <img src="/placeholder.svg?height=80&width=80" 
                             alt="Tomato 2" class="thumbnail" onclick="changeMainImage(this)">
                        <img src="/placeholder.svg?height=80&width=80" 
                             alt="Tomato 3" class="thumbnail" onclick="changeMainImage(this)">
                        <img src="/placeholder.svg?height=80&width=80" 
                             alt="Tomato 4" class="thumbnail" onclick="changeMainImage(this)">
                    </div>
                </div>
                <div class="col-lg-6 text-center text-lg-start">
                    <h1 class="plant-name">Tomato</h1>
                    <p class="scientific-name">Solanum lycopersicum</p>
                    <span class="category-badge">
                        <i class="fas fa-apple-alt me-2"></i>Fruit Vegetable
                    </span>
                    <p class="mt-4 fs-5 text-muted">
                        The tomato is the edible berry of the plant Solanum lycopersicum, commonly known as a tomato plant. 
                        Originally native to South America, tomatoes are now cultivated worldwide and are a staple ingredient 
                        in many cuisines. They are rich in vitamins C and K, potassium, and folate.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Content area with compact sidebar -->
    <div class="content-wrapper">
        <div class="container">
            <!-- Mobile Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white d-lg-none border-bottom mb-3 rounded">
                <div class="container-fluid">
                    <span class="navbar-text fw-bold text-muted">Plant Information</span>
                    <button class="btn btn-outline-success" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileNav">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </nav>

            <!-- Mobile Offcanvas Navigation -->
            <div class="offcanvas offcanvas-start d-lg-none" tabindex="-1" id="mobileNav">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title">
                        <i class="fas fa-list me-2"></i>Plant Information
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
                </div>
                <div class="offcanvas-body">
                    <nav class="nav flex-column" id="mobile-nav">
                        <a class="nav-link active" href="#growth-conditions" data-bs-dismiss="offcanvas">
                            <i class="fas fa-seedling me-2"></i>Growth Conditions
                        </a>
                        <a class="nav-link" href="#diseases" data-bs-dismiss="offcanvas">
                            <i class="fas fa-virus me-2"></i>Diseases
                        </a>
                        <a class="nav-link" href="#pests" data-bs-dismiss="offcanvas">
                            <i class="fas fa-bug me-2"></i>Pests
                        </a>
                        <a class="nav-link" href="#uses" data-bs-dismiss="offcanvas">
                            <i class="fas fa-star me-2"></i>Uses
                        </a>
                        <a class="nav-link" href="#external-resources" data-bs-dismiss="offcanvas">
                            <i class="fas fa-external-link-alt me-2"></i>External Resources
                        </a>
                    </nav>
                </div>
            </div>

            <div class="row">
                <!-- Compact Desktop Sidebar -->
                <div class="col-lg-3 d-none d-lg-block">
                    <div class="sidebar">
                        <div class="sidebar-title">
                            <h6>
                                <i class="fas fa-leaf me-2"></i>Plant Information
                            </h6>
                        </div>
                        <nav class="nav flex-column" id="sidebar-nav">
                            <a class="nav-link active" href="#growth-conditions">
                                <i class="fas fa-seedling me-2"></i>Growth Conditions
                            </a>
                            <a class="nav-link" href="#diseases">
                                <i class="fas fa-virus me-2"></i>Diseases
                            </a>
                            <a class="nav-link" href="#pests">
                                <i class="fas fa-bug me-2"></i>Pests
                            </a>
                            <a class="nav-link" href="#uses">
                                <i class="fas fa-star me-2"></i>Uses
                            </a>
                            <a class="nav-link" href="#external-resources">
                                <i class="fas fa-external-link-alt me-2"></i>External Resources
                            </a>
                        </nav>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <div class="content-area">
                        <!-- Growth Conditions Section -->
                        <section id="growth-conditions" class="section">
                            <h3><i class="fas fa-seedling me-3"></i>Growth Conditions</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="condition-item">
                                        <h5><i class="fas fa-thermometer-half me-2"></i>Temperature</h5>
                                        <p>Optimal range: 65-75°F (18-24°C). Cannot tolerate frost.</p>
                                    </div>
                                    <div class="condition-item">
                                        <h5><i class="fas fa-tint me-2"></i>Humidity</h5>
                                        <p>Moderate humidity levels, 40-70%. Good air circulation is important.</p>
                                    </div>
                                    <div class="condition-item">
                                        <h5><i class="fas fa-mountain me-2"></i>Soil Type</h5>
                                        <p>Well-draining, fertile soil with pH 6.0-6.8. Rich in organic matter.</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="condition-item">
                                        <h5><i class="fas fa-sun me-2"></i>Sunlight</h5>
                                        <p>Full sun, 6-8 hours of direct sunlight daily for best fruit production.</p>
                                    </div>
                                    <div class="condition-item">
                                        <h5><i class="fas fa-shower me-2"></i>Watering</h5>
                                        <p>Regular, deep watering. Keep soil consistently moist but not waterlogged.</p>
                                    </div>
                                    <div class="condition-item">
                                        <h5><i class="fas fa-ruler me-2"></i>Spacing</h5>
                                        <p>Plant 18-24 inches apart with support stakes or cages.</p>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- Diseases Section -->
                        <section id="diseases" class="section">
                            <h3><i class="fas fa-virus me-3"></i>Common Diseases</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="disease-item">
                                        <h5>Powdery Mildew</h5>
                                        <p>White, powdery fungal growth on leaves and stems. Causes yellowing and wilting. 
                                           Prevent with good air circulation and avoid overhead watering.</p>
                                    </div>
                                    <div class="disease-item">
                                        <h5>Early Blight</h5>
                                        <p>Dark spots with concentric rings on lower leaves. Can spread to fruit. 
                                           Remove affected leaves and ensure proper spacing.</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="disease-item">
                                        <h5>Late Blight</h5>
                                        <p>Water-soaked spots on leaves that turn brown. Can destroy entire plants quickly. 
                                           Most common in cool, wet conditions.</p>
                                    </div>
                                    <div class="disease-item">
                                        <h5>Fusarium Wilt</h5>
                                        <p>Yellowing and wilting of lower leaves, often on one side of plant. 
                                           Soil-borne fungus that affects vascular system.</p>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- Pests Section -->
                        <section id="pests" class="section">
                            <h3><i class="fas fa-bug me-3"></i>Common Pests</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="pest-item">
                                        <h5>Aphids</h5>
                                        <p>Small, soft-bodied insects that cluster on new growth. They suck plant juices 
                                           and can transmit viruses. Control with insecticidal soap or beneficial insects.</p>
                                    </div>
                                    <div class="pest-item">
                                        <h5>Hornworms</h5>
                                        <p>Large green caterpillars that can quickly defoliate plants. Hand-pick or 
                                           use Bt (Bacillus thuringiensis) for organic control.</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="pest-item">
                                        <h5>Whiteflies</h5>
                                        <p>Tiny white flying insects that feed on leaf undersides. Can cause yellowing 
                                           and stunted growth. Use yellow sticky traps for monitoring and control.</p>
                                    </div>
                                    <div class="pest-item">
                                        <h5>Cutworms</h5>
                                        <p>Caterpillars that cut through stems at soil level, killing young plants. 
                                           Use collar barriers around seedlings for protection.</p>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- Uses Section -->
                        <section id="uses" class="section">
                            <h3><i class="fas fa-star me-3"></i>Uses</h3>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="uses-group">
                                        <h5><i class="fas fa-utensils me-2"></i>Culinary</h5>
                                        <span class="use-tag">Fresh eating</span>
                                        <span class="use-tag">Sauces</span>
                                        <span class="use-tag">Salads</span>
                                        <span class="use-tag">Cooking</span>
                                        <span class="use-tag">Preserving</span>
                                        <span class="use-tag">Juicing</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="uses-group">
                                        <h5><i class="fas fa-heartbeat me-2"></i>Nutritional</h5>
                                        <span class="use-tag">Vitamin C</span>
                                        <span class="use-tag">Lycopene</span>
                                        <span class="use-tag">Potassium</span>
                                        <span class="use-tag">Folate</span>
                                        <span class="use-tag">Antioxidants</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="uses-group">
                                        <h5><i class="fas fa-industry me-2"></i>Commercial</h5>
                                        <span class="use-tag">Canning</span>
                                        <span class="use-tag">Processing</span>
                                        <span class="use-tag">Export</span>
                                        <span class="use-tag">Paste production</span>
                                        <span class="use-tag">Sauce industry</span>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- External Resources Section -->
                        <section id="external-resources" class="section">
                            <h3><i class="fas fa-external-link-alt me-3"></i>External Resources</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <a href="https://www.gbif.org/" class="external-link" target="_blank">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-globe me-3"></i>
                                            <div>
                                                <strong>GBIF - Global Biodiversity Information Facility</strong>
                                                <small class="d-block text-muted">Comprehensive species database</small>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="https://www.extension.org/" class="external-link" target="_blank">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-book me-3"></i>
                                            <div>
                                                <strong>Extension.org</strong>
                                                <small class="d-block text-muted">Research-based agricultural information</small>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a href="https://www.usda.gov/" class="external-link" target="_blank">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-landmark me-3"></i>
                                            <div>
                                                <strong>USDA - United States Department of Agriculture</strong>
                                                <small class="d-block text-muted">Official agricultural guidelines</small>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="https://www.rhs.org.uk/" class="external-link" target="_blank">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-seedling me-3"></i>
                                            <div>
                                                <strong>Royal Horticultural Society</strong>
                                                <small class="d-block text-muted">Expert gardening advice</small>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Image gallery functionality
        function changeMainImage(thumbnail) {
            const mainImage = document.getElementById('mainImage');
            mainImage.src = thumbnail.src.replace('height=80&width=80', 'height=350&width=500');
            
            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            thumbnail.classList.add('active');
        }

        // Smooth scrolling for navigation links
        $(document).ready(function() {
            // Handle sidebar navigation clicks
            $('#sidebar-nav a, #mobile-nav a').on('click', function(e) {
                e.preventDefault();
                const target = $(this.getAttribute('href'));
                
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 100
                    }, 800);
                }
            });

            // Update active navigation item on scroll
            $(window).on('scroll', function() {
                let current = '';
                $('section').each(function() {
                    const sectionTop = $(this).offset().top;
                    const sectionHeight = $(this).outerHeight();
                    if ($(window).scrollTop() >= sectionTop - 150) {
                        current = $(this).attr('id');
                    }
                });

                $('#sidebar-nav a, #mobile-nav a').removeClass('active');
                if (current) {
                    $('#sidebar-nav a[href="#' + current + '"], #mobile-nav a[href="#' + current + '"]').addClass('active');
                }
            });
        });
    </script>
</body>
</html>