@page
@model Auth
@{
    ViewData["Title"] = "Authentication";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/loginstyle.css">
</head>

<body>
    <div class="login-container">
        <div class="header">
            <div class="logo">
                <i class="fas fa-seedling"></i>
                <h1>AgriWiki</h1>
            </div>
            <p class="subtitle">Hệ thống tra cứu thông tin cây trồng</p>
        </div>

        <div class="form-tabs">
            <button type="button" class="tab active" data-tab="signin">Đăng Nhập</button>
            <button type="button" class="tab" data-tab="signup">Đăng Ký</button>
        </div>

        <div class="form-content">
            <!-- Form Đăng Nhập -->
            <form method="post" asp-page-handler="Signin" class="form active" id="signin-form">
                <div class="form-group">
                    <label asp-for="signinInput.Email"></label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="signinInput.Email" class="form-control" placeholder="Enter email" required/>
                    </div>
                    <span asp-validation-for="signinInput.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="signinInput.Password"></label>
                    <div class="input-wrapper" style="position: relative;">
                        <i class="fas fa-lock"></i>
                        <input asp-for="signinInput.Password" class="form-control" id="signinPassword" placeholder="Enter password" required/>
                        <i class="fas fa-eye toggle-password" data-target="signinPassword"></i>
                    </div>
                    <span asp-validation-for="signinInput.Password" class="text-danger"></span>
                </div>

                <div class="forgot-password">
                    <a href="#">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="submit-btn">
                    <i class="fas fa-sign-in-alt" style="margin-right: 8px;"></i>
                    Đăng Nhập
                </button>
            </form>

            <!-- Form Đăng Ký -->
            <form method="post" asp-page-handler="Signup" class="form" id="signup-form">
                <div class="form-group">
                    <label asp-for="signupInput.FullName"></label>
                    <div class="input-wrapper">
                        <i class="fas fa-user"></i>
                        <input asp-for="signupInput.FullName" class="form-control" placeholder="Enter full name" required/>
                    </div>
                    <span asp-validation-for="signupInput.FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="signupInput.Email"></label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="signupInput.Email" class="form-control" placeholder="Enter email" required/>
                    </div>
                    <span asp-validation-for="signupInput.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="signupInput.Password"></label>
                    <div class="input-wrapper" style="position: relative;">
                        <i class="fas fa-lock"></i>
                        <input asp-for="signupInput.Password" class="form-control" id="signupPassword" placeholder="Enter password" required/>
                        <i class="fas fa-eye toggle-password" data-target="signupPassword"></i>
                    </div>
                    <span asp-validation-for="signupInput.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="signupInput.ConfirmPassword"></label>
                    <div class="input-wrapper" style="position: relative;">
                        <i class="fas fa-lock"></i>
                        <input asp-for="signupInput.ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Enter confirm password" required/>
                        <i class="fas fa-eye toggle-password" data-target="confirmPassword"></i>
                    </div>
                    <span asp-validation-for="signupInput.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="submit-btn">
                    <i class="fas fa-user-plus" style="margin-right: 8px;"></i>
                    Đăng Ký
                </button>
            </form>
        </div>

        <div class="login-footer">
            <p>Bằng cách đăng nhập, bạn đồng ý với <a href="#">Điều khoản sử dụng</a> và <a href="#">Chính sách bảo
                    mật</a> của AgriWiki</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info mt-3">@Model.Message</div>
        }
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        document.querySelectorAll(".toggle-password").forEach(icon => {
            icon.addEventListener("click", function () {
                const input = document.getElementById(this.dataset.target);

                if (input.type === "password") {
                    input.type = "text";
                    this.classList.remove("fa-eye");
                    this.classList.add("fa-eye-slash");
                } else {
                    input.type = "password";
                    this.classList.remove("fa-eye-slash");
                    this.classList.add("fa-eye");
                }
            });
        });
    </script>
    <script src="~/js/login.js"></script>

</body>

</html>