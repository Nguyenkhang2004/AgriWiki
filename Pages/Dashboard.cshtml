@page
@model AgriWiki_Project.Pages.Dashboard
@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}

<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="utf-8">
  <title>FoodHub Admin - Quản lý hệ thống</title>
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <meta content="" name="keywords">
  <meta content="" name="description">

  <!-- Favicon -->
  <link href="img/favicon.ico" rel="icon">

  <!-- Google Web Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
          href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&family=Pacifico&display=swap"
          rel="stylesheet">

  <!-- Icon Font Stylesheet -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

  
</head>

<body>
<!-- Sidebar -->
<div class="sidebar d-flex flex-column" id="sidebar">
  <div class="brand text-center">
    <h3><i class="fa fa-utensils me-2"></i>FoodHub</h3>
    <small class="d-block">Admin Panel</small>
  </div>

  <nav class="sidebar-nav flex-fill">
    <ul class="nav flex-column">
      <li class="nav-item">
        <a href="#" class="nav-link active" onclick="showDashboard()">
          <i class="fas fa-tachometer-alt"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="user.html" class="nav-link" onclick="showCustomerManagement()">
          <i class="fas fa-users"></i>
          <span>Quản lý khách hàng</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="adminDashboardStaff.html" class="nav-link" onclick="showStaffManagement()">
          <i class="fas fa-user-tie"></i>
          <span>Quản lý nhân viên</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link" onclick="showMenuManagement()">
          <i class="fas fa-utensils"></i>
          <span>Quản lý món ăn</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link" onclick="showFinanceManagement()">
          <i class="fas fa-money-bill-wave"></i>
          <span>Quản lý tài chính</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link" onclick="showOrders()">
          <i class="fas fa-shopping-cart"></i>
          <span>Đơn hàng</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link" onclick="showReports()">
          <i class="fas fa-chart-bar"></i>
          <span>Báo cáo</span>
        </a>
      </li>
    </ul>
  </nav>

  <div class="logout-section">
    <button class="logout-btn" onclick="handleLogout()">
      <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
    </button>
  </div>
</div>

<!-- Main Content -->
<div class="main-content" id="mainContent">
  <!-- Top Bar -->
  <div class="top-bar">
    <div class="d-flex align-items-center">
      <button class="toggle-sidebar me-3" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
      </button>
      <h4 class="mb-0" id="pageTitle">Dashboard</h4>
    </div>
    <div class="d-flex align-items-center">
      <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
          <i class="fas fa-user-circle me-2"></i>Admin
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Hồ sơ</a></li>
          <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="#" onclick="handleLogout()"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dashboard Content -->
  <div id="dashboardContent">
    
  </div>

  <!-- Dynamic Content Area -->
  <div id="dynamicContent" style="display: none;">
    <!-- Content will be loaded here dynamically -->
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<!-- Chart.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>

<script>
  let currentCharts = [];

  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    const mainContent = document.getElementById('mainContent');

    sidebar.classList.toggle('collapsed');
    mainContent.classList.toggle('expanded');
  }

  function setActiveNav(element) {
    // Remove active class from all nav links
    document.querySelectorAll('.nav-link').forEach(link => {
      link.classList.remove('active');
    });

    // Add active class to clicked element
    element.classList.add('active');
  }

  function destroyCurrentCharts() {
    currentCharts.forEach(chart => {
      if (chart) {
        chart.destroy();
      }
    });
    currentCharts = [];
  }

  function handleLogout() {
    if (confirm('Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?')) {
      // Add logout animation
      document.body.style.opacity = '0.5';
      document.body.style.transition = 'opacity 0.5s';

      setTimeout(() => {
        alert('Đã đăng xuất thành công!');
        // In a real application, redirect to login page
        // window.location.href = '/login';
        document.body.style.opacity = '1';
      }, 1000);
    }
  }

  function showDashboard() {
    destroyCurrentCharts();
    document.getElementById('pageTitle').textContent = 'Dashboard';
    document.getElementById('dashboardContent').style.display = 'block';
    document.getElementById('dynamicContent').style.display = 'none';

    // Set active nav
    document.querySelectorAll('.nav-link').forEach(link => {
      link.classList.remove('active');
    });
    document.querySelector('[onclick="showDashboard()"]').classList.add('active');
  }

  function showReports() {
    destroyCurrentCharts();
    document.getElementById('pageTitle').textContent = 'Báo cáo & Thống kê';
    document.getElementById('dashboardContent').style.display = 'none';
    document.getElementById('dynamicContent').style.display = 'block';

    document.getElementById('dynamicContent').innerHTML = `
                <div class="container-fluid p-4">
                    <!-- Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card text-center" style="border-left: 4px solid var(--success);">
                                <div class="card-body">
                                    <h3 class="text-success">₫12.5M</h3>
                                    <p class="text-muted mb-0">Doanh thu tháng này</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center" style="border-left: 4px solid var(--info);">
                                <div class="card-body">
                                    <h3 class="text-info">2,847</h3>
                                    <p class="text-muted mb-0">Đơn hàng hoàn thành</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center" style="border-left: 4px solid var(--warning);">
                                <div class="card-body">
                                    <h3 class="text-warning">156</h3>
                                    <p class="text-muted mb-0">Khách hàng mới</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center" style="border-left: 4px solid var(--primary);">
                                <div class="card-body">
                                    <h3 style="color: var(--primary);">4.8★</h3>
                                    <p class="text-muted mb-0">Đánh giá trung bình</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Row 1 -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="report-card">
                                <h5 class="chart-title"><i class="fas fa-chart-line me-2"></i>Doanh thu 7 ngày gần nhất</h5>
                                <div class="chart-container">
                                    <canvas id="revenueChart"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="report-card">
                                <h5 class="chart-title"><i class="fas fa-chart-pie me-2"></i>Phân loại đơn hàng</h5>
                                <div class="chart-container">
                                    <canvas id="orderTypeChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Row 2 -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="report-card">
                                <h5 class="chart-title"><i class="fas fa-chart-bar me-2"></i>Món ăn bán chạy nhất</h5>
                                <div class="chart-container">
                                    <canvas id="bestSellingChart"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="report-card">
                                <h5 class="chart-title"><i class="fas fa-clock me-2"></i>Đơn hàng theo giờ</h5>
                                <div class="chart-container">
                                    <canvas id="hourlyOrderChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Row 3 -->
                    <div class="row">
                        <div class="col-md-8">
                            <div class="report-card">
                                <h5 class="chart-title"><i class="fas fa-calendar-alt me-2"></i>Doanh thu theo tháng</h5>
                                <div class="chart-container">
                                    <canvas id="monthlyRevenueChart"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="report-card">
                                <h5 class="chart-title"><i class="fas fa-star me-2"></i>Đánh giá khách hàng</h5>
                                <div class="chart-container">
                                    <canvas id="ratingChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;

    setActiveNav(document.querySelector('[onclick="showReports()"]'));

    // Create charts after DOM is updated
    setTimeout(() => {
      createCharts();
    }, 100);
  }

  function createCharts() {
    // Revenue Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    const revenueChart = new Chart(revenueCtx, {
      type: 'line',
      data: {
        labels: ['T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'CN'],
        datasets: [{
          label: 'Doanh thu (VNĐ)',
          data: [1200000, 1500000, 1800000, 2100000, 2500000, 2800000, 2200000],
          borderColor: '#FEA116',
          backgroundColor: 'rgba(254, 161, 22, 0.1)',
          borderWidth: 3,
          fill: true,
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              callback: function(value) {
                return new Intl.NumberFormat('vi-VN', {
                  style: 'currency',
                  currency: 'VND'
                }).format(value);
              }
            }
          }
        }
      }
    });
    currentCharts.push(revenueChart);}

</script>